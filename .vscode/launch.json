    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'grepr'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=grepr",
                    "--package=grepr"
                ],
                "filter": {
                    "name": "grepr",
                    "kind": "bin"
                }
            },
            "args": ["xyz", "test_sm.txt", "-e"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'grepr'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=grepr",
                    "--package=grepr"
                ],
                "filter": {
                    "name": "grepr",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'grepr_lib'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=grepr_lib"
                ],
                "filter": {
                    "name": "grepr_lib",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}